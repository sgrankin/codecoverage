{
  "name": "codecoverage-action",
  "version": "1.1.0",
  "private": true,
  "type": "module",
  "description": "GitHub Action to annotate PRs with lines that are missing test coverage",
  "main": "src/main.ts",
  "scripts": {
    "typecheck": "tsgo --noEmit",
    "check": "biome check --write",
    "package": "esbuild src/main.ts --bundle --platform=node --target=node24 --format=cjs --minify --outfile=dist/index.cjs --sourcemap --legal-comments=linked --define:import.meta.vitest=undefined",
    "test": "NO_COLOR=1 vitest",
    "test:cov": "NO_COLOR=1 vitest run --coverage",
    "all": "npm run typecheck && npm run check && npm run package && npm run test:cov"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sgrankin/codecoverage.git"
  },
  "keywords": [
    "actions",
    "coverage",
    "testing"
  ],
  "author": "Gabriel Gilder, Shravan Dhakal",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^2.0.2",
    "@actions/github": "^7.0.0",
    "@actions/glob": "^0.5.0",
    "fast-xml-parser": "^5.3.3"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.11",
    "@types/node": "^25.0.10",
    "@typescript/native-preview": "^7.0.0-dev.20260117.1",
    "@vitest/coverage-v8": "^4.0.17",
    "esbuild": "^0.27.2",
    "typescript": "^5.9.3",
    "vitest": "^4.0.17"
  }
}
